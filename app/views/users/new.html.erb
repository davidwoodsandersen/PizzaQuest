<div class="container">
  <div class="row">
    <div class="col-sm-6 col-centered">
      <div class="class-with-space white extra-bottom">

        <h3>Make an account</h3>

        <%= form_for @user do |f| %>
            <%= f.label :username %>
            <%= f.text_field :username %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :image_link %>
            <%= f.text_field :image %>
            <%= f.label :tagline %>
            <%= f.text_field :tagline %>
            <%= f.submit %>
        <% end %>

      </div>
    </div>
  </div>
</div>
