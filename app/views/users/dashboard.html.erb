<script src="https://maps.googleapis.com/maps/api/js?sensor=true&libraries=places"></script>
<%= javascript_include_tag 'map', 'data-turbolinks-track' => true %>

<!-- adding in Alan's ajax page  -->
<%= javascript_include_tag 'ajax_for_visits', 'data-turbolinks-track' => true %>

<%= stylesheet_link_tag  'map', media: 'all', 'data-turbolinks-track' => true %>

<div class="container">


        <div class="row">
          <div class="col-sm-12">
              <div class="class-with-space white">


                <div class="row">
                    <div class="col-sm-6">


                      <% if @user.image.length == 0 %>

                      <%= image_tag("noprof.png", :class => "dashboard-image") %>


                      <% elsif @user.image %>

                      <%= image_tag("#{@user.image}", :class => "dashboard-image") %>

                      <% end %>


                      <h1 class="dashboard-username"> <%= @user.username %> </h1>
                      <p class="dashboard-total">8374627 Points</p>
                      <p class="dashboard-rank">Current Ranking: #93</p>
                    </div>

                    <div class="col-sm-6">

                      <h1 class="dashboard-welcome">Welcome back, <%= @user.username %></h1>

                    </div>

                </div>


                <hr />


                <div class="row">
                  <div class="col-sm-8">
                    <h3>
                      Map
                      <button class="map-button" id="refresh">Refresh</button>
                      <button class="pick map-button">Click me now!</button>
                    </h3>
                    <div class="map-container">
                      <div id="map"></div>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <h3>Add Visit</h3>

                    <form class="" action="/api/visits" method="post">
                      <label>Restaurant:</label>
                      <input id="restaurant-name" type="text" name="name">
                      <!-- <select>
                        <option>Joe's Pizza</option>
                        <option>Tony's Pizza</option>
                        <option>Bob's Pizza</option>
                      </select> -->
                      <label>Write about your experience:</label>
                      <input id="restaurant-id" name="visit[review]" rows="10" placeholder="Test"></input>
                      <input type="submit" value="Add Visit" id="visit-submit">
                    </form>
                  </div>
                </div>

            </div>
          </div>
        </div>

      </div>
